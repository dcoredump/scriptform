{
    "title": "Validation example",
    "forms": {
        "validate": {
            "title": "Validated form",
            "description": "This form is heavily validated",
            "submit_title": "Validate it",
            "script": "job_validate.sh",
            "fields": [
                {
                    "name": "string",
                    "title": "A string between 5 and 7 characters.",
                    "type": "string",
                    "required": true,
                    "minlen": 5,
                    "maxlen": 7
                },
                {
                    "name": "integer",
                    "title": "An integer between 10 and 20",
                    "type": "integer",
                    "required": true,
                    "min": 10,
                    "max": 20
                },
                {
                    "name": "float",
                    "title": "A real number between 0.5 and 1",
                    "type": "float",
                    "required": true,
                    "min": 0.5,
                    "max": 1.0
                },
                {
                    "name": "date",
                    "title": "A date",
                    "type": "date",
                    "required": true,
                    "min": "2015-01-01",
                    "max": "2015-02-01"
                }
            ]
        }
    }
}
